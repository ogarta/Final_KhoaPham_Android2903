<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    android:id="@+id/cardview_cart_history"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewImageOrderHistory"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="5dp"
            app:layout_constraintDimensionRatio="1.5:1"
            android:layout_width="0dp"
            android:layout_height="120dp">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/imageViewOrderHistory"
                tools:src="@drawable/img_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <TextView
            app:layout_constraintVertical_chainStyle="spread_inside"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:textColor="#f20"
            android:id="@+id/textViewNameOrderHistory"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textViewAddressOrderHistory"
            app:layout_constraintLeft_toRightOf="@id/cardViewImageOrderHistory"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:textColor="#8A8A8A"
            android:id="@+id/textViewAddressOrderHistory"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewNameOrderHistory"
            app:layout_constraintBottom_toTopOf="@id/textViewPriceOrderHistory"
            app:layout_constraintLeft_toRightOf="@id/cardViewImageOrderHistory"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="13sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:textStyle="italic"
            android:textColor="#040404"
            android:id="@+id/textViewPriceOrderHistory"
            app:layout_constraintTop_toBottomOf="@id/textViewAddressOrderHistory"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textViewNumQuanityProductHistory"
            app:layout_constraintLeft_toRightOf="@id/cardViewImageOrderHistory"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewNumQuanityProductHistory"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/textViewPriceOrderHistory"
            app:layout_constraintLeft_toRightOf="@id/cardViewImageOrderHistory"
            android:text="1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>